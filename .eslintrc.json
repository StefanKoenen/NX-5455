{
    "root": true,
    "ignorePatterns": [
        "**/*"
    ],
    "plugins": [
        "@nrwl/nx",
        "unused-imports"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "extends": [
                "plugin:@nrwl/nx/typescript"
            ],
            "parserOptions": {
                "project": "./tsconfig.*?.json"
            },
            "rules": {
                "@angular-eslint/no-empty-lifecycle-method": "none",
                "@typescript-eslint/no-unused-vars": [
                    "error",
                    {
                        "vars": "all",
                        "varsIgnorePattern": "^_$",
                        "args": "after-used",
                        "argsIgnorePattern": "^_",
                        "caughtErrorsIgnorePattern": "^_$"
                    }
                ],
                "unused-imports/no-unused-imports": "warn",
                "@nrwl/nx/enforce-module-boundaries": [
                    "warn",
                    {
                        "enforceBuildableLibDependency": true,
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "*",
                                "onlyDependOnLibsWithTags": [
                                    "*"
                                ]
                            }
                        ]
                    }
                ],
                "max-len": [
                    "error",
                    {
                        "code": 210
                    }
                ]
            }
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "extends": [
                "plugin:@nrwl/nx/javascript"
            ],
            "rules": {}
        }
    ]
}
