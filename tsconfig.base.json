{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "rootDir": "./",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "jszip": [
                "node_modules/jszip/dist/jszip.min.js"
            ],
            "lodash/*": [
                "node_modules/lodash-es/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
